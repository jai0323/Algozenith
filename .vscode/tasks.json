{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "&&",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile and run active C++ file using cmd"
    }
  ]
}
